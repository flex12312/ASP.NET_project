@model ProductViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Редактирование товара";
}

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Редактирование товара</h2>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row justify-content-center mt-3">
        <div class="col-6 mb-3">
            <div class="text-danger fw-bold text-uppercase" asp-validation-summary="All"></div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <p>
                <label class="form-label" asp-for="Name"></label><br />
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </p>
            <p>
                <label class="form-label" asp-for="Cost"></label><br />
                <input type="number" class="form-control" asp-for="Cost" />
                <span asp-validation-for="Cost"></span>
            </p>
            <p>
                <label class="form-label" asp-for="Description"></label><br />
                <textarea class="form-control" asp-for="Description">@Model.Description</textarea>
                <span asp-validation-for="Description"></span>
            </p>
            <p>
                <label class="form-label">Текущее изображение:</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <img src="@Model.ImagePath" alt="Product Image"
                             style="width: 200px; height: auto; border-radius: 8px; border: 1px solid #ddd;" />
                    </div>
                }
                else
                {
                    <div class="text-muted mb-3">Изображение не установлено</div>
                }
                <label class="form-label" asp-for="ImagePath">Изменить ссылку:</label><br />
                <input class="form-control mb-2" asp-for="ImagePath" />

                <label class="form-label">Или загрузить новый файл:</label>
                <input type="file" asp-for="ImageFile" id="imageInput" class="form-control" accept="image/*" />
            </p>
        </div>
    </div>
    <div class="text-center m-3">
        <button class="btn btn-outline-success" type="submit"
                asp-area="Admin"
                asp-controller="Product"
                asp-action="EditProduct">
            Редактировать
        </button>
    </div>
</form>