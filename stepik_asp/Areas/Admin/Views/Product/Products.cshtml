@model List<ProductViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Товары";
}

<div class="row mt-3">

    @await Html.PartialAsync("SideBar")

    <div class="col-9 mb-3">
        <div class="text-center text-uppercase text-success mb-5 mt-5">
            <h2 class="row-title">Товары</h2>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <div class="row justify-content-center mt-3">
                <div class="col-12">
                    <div class="text-end">
                        <a class="btn btn-outline-success mb-2 mt-2"
                           asp-area="Admin"
                           asp-controller="Product"
                           asp-action="AddProduct">
                            Добавить новый продукт
                        </a>
                    </div>
                    <table class="table table-responsive table-striped table-hover mb-5">
                        <thead>
                            <tr align="center">
                                <th scope="col">#</th>
                                <th scope="col">Наименование товара</th>
                                <th scope="col">Цена, руб.</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr align="center" class="align-baseline">
                                    <td class="fw-bold">@(i + 1)</td>
                                    <td align="left">
                                        <a class="text-success"
                                           asp-area="Admin"
                                           asp-controller="Product"
                                           asp-action="Index"
                                           asp-route-Id=@Model[i].Id>
                                            <h5>@Model[i].Name</h5>
                                        </a>
                                    </td>
                                    <td>@Model[i].Cost</td>
                                    <td>
                                        <a class="btn btn-outline-success"
                                           asp-area="Admin"
                                           asp-controller="Product"
                                           asp-action="EditProduct"
                                           asp-route-Id="@Model[i].Id">
                                            Редактировать
                                        </a>
                                    </td>
                
                                    <td>
                                        <a class="btn btn-outline-success" data-bs-target="#Returned_@i" data-bs-toggle="modal">
                                            Удалить
                                        </a>

                                        <div class="modal fade" id="Returned_@i" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="modalWindow" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <p class="modal-title fw-bold" id="modalWindow">Удаление товара</p>
                                                    </div>
                                                    <form method="post">
                                                        <div class="modal-body">
                                                            Вы действительно хотите удалить товар "@Model[i].Name"?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button class="btn btn-outline-danger w-25" type="submit"
                                                                    asp-area="Admin"
                                                                    asp-controller="Product"
                                                                    asp-action="DeleteProduct"
                                                                    asp-route-Id=@Model[i].Id>
                                                                Удалить
                                                            </button>

                                                            <a class="btn btn-outline-success w-25" role="button" data-bs-dismiss="modal"
                                                               asp-area="Admin"
                                                               asp-controller="Product"
                                                               asp-action="Products">
                                                                Отмена
                                                            </a>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    ...
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr align="center">
                                <th colspan="2"></th>
                                <th colspan="3">
                                    Общее количество товаров: @Model.Count
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="text-center">
                <h2 class="row-title">В хранилище нет товаров!</h2>
            </div>
            <div class="text-center mt-5">
                <a class="btn btn-outline-success mb-2 mt-2"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="AddProduct">
                    Добавить новый продукт
                </a>
            </div>
        }
    </div>
</div>