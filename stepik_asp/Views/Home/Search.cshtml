@using stepik_asp.Models
@model List<ProductViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная";
}

@await Html.PartialAsync("SearchBlock")

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Товары, соответствующие запросу</h2>
</div>

<div class="row justify-content-center mt-3">
    @await Html.PartialAsync("ProductsCatalog", Model)
</div>

<div class="text-center m-5">
    <a class="btn btn-outline-success"
       asp-area=""
       asp-controller="Home"
       asp-action="Index">
        Отобразить весь каталог товаров
    </a>
</div>